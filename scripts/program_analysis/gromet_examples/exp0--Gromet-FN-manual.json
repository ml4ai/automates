
# exp0.py


# Top-level object is a GrometFNCollection
# At the moment, 'contents' field is the only field that will index into the function networks array 
#  in other words all other indices should refer to the GroMEt FN that we're in.
#  this will probably change when we start handling multiple files
# 
{"function_networks":
	[  # array of GrometFNs
		{  # This is GrometFN 0
			"B": [{"name": "module", "type": "Module"}],  # The FN outer Box as a Module
			"BF": [{"name": "", "type": "Expression", "contents": 1, "value": None}],  # "contents" = FN 1
			"POF": [{"box": 0, "name": "x"}]  # The PortOut for the BF 0
		},
		{  # This is GrometFN 1
			"B": [{"name": "", "type": "Expression"}],  # The FN outer Box as an Expression
			"BF": [{"name": "", "type": "LiteralValue", "contents": None, "value": {"value_type": "Integer", "value": 2}, 
				        "metadata": [{"metadata_type": "source_code_data_type", ...}]}],
			"POF": [{"box": 0, "name": ""}],  # The PortOut for the LiteralValue (Function), with "box" referring to index in "BF"
			"OPO": [{"box": 0, "name": "x"}],    # The OuterPortOut, with "box" referring to index in "B"
			"WFOPO": [{"src": 0, "tgt": 0}]   # The Wire from LiteralValue (Function) PortOut ("POF") to the OuterPortOut ("OPO")
		}
	],
 "metadata": [
 	{"metadata_type": "gromet_creation", ...},
 	{"metadata_type": "code_collection", ...},
 	{"metadata_type": "textual_document_creation", ...}
 ]
}


